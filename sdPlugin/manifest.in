{
    "SDKVersion": 2,
    "UUID": "${PLUGIN_UUID}",
    "Name": "RAM",
    "Description": "Displays the current memory usage.",
    "Icon": "pluginIcon",
    "Category": "RAM",
    "CategoryIcon": "categoryIcon",
    "Version": "${CMAKE_PROJECT_VERSION}",
    "Author": "Michail Palubisak",
    "URL": "https://github.com/dirondin/streamdeck-ram",
    ${CODE_PATHS},
    "OS": [
        {
            "Platform": "mac",
            "MinimumVersion": "${CMAKE_OSX_DEPLOYMENT_TARGET}"
        },
        {
            "Platform": "windows",
            "MinimumVersion": "10"
        }
    ],
    "Software": {
        "MinimumVersion": "6.5"
    },
    "Actions": [
        {
            "Icon": "memoryUsageActionIcon",
            "Name": "Memory usage",
            "States": [
                {
                    "Image": "memoryUsageKeyIcon",
                    "TitleAlignment": "middle",
                    "FontSize": 13
                }
            ],
            "SupportedInMultiActions": false,
            "Tooltip": "Displays the memory usage in percents",
            "UUID": "${PLUGIN_UUID}.usage"
        }
    ]
}